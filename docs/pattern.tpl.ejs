<% include header %>
    <div class="pl-header navbar navbar-fixed-top navbar-inverse">
        <div class="<%= meta.sidebar == false ? 'container' : 'container-fluid' %>">
            <div class="navbar-header">
                <a href="index.html" class="navbar-brand"><strong>USPTO</strong> <span class="light">Design</span></a>
                <!-- <button type="button" class="btn btn-link nav-collapse"><i class="fa fa-navicon"></i></button> -->
                <% if (meta.sidebar !== false) { %>
                <button type="button" class="nav-collapse btn btn-link"><i class="fa fa-1x fa-bars"></i></button>
                <%}%>
                <button data-toggle="collapse" data-target="#pl-navbar-collapse" type="button" class="btn navbar-toggle collapsed"><i class="fa fa-1x fa-angle-down"></i></button>
            </div>
            <div class="navbar-collapse collapse" id="pl-navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="patterns-index.html">Patterns</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <!-- <a ><i class="fa fa-1x fa-warning"></i><span class="count">3</span></a> -->
                    <li>
                        <a href="<%= globals.githubURL %>" title="View on Github" ><i class="fa fa-1x fa-github"></i> &nbsp; View on Github</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="pl-sub-header">
        <div class="pull-left">
            <h4><strong><%= category %></strong> - <%= meta.title %></h4>
        </div>
        <div class="pull-right">
            <button type="button" title="Edit this page on Github" class="btn btn-sm btn-default"> <i class="fa fa-pencil"></i></button>
        </div>
    </div>
    <div class="pl-container">
        <ul class="pl-sidebar">
            <% Object.keys(nav[category] || {}).forEach(function (subCategory) { %>
                <li class="category"><%= subCategory.toUpperCase() %></li>
                <% nav[category][subCategory].forEach(function(l) { %>
                    <% if (!l.meta.draft) { %>
                        <li class="<%= l.title == meta.title ? 'active' : '' %>"><a href="<%= l.url %>"><%- l.meta.preview ? '<i title="This document is a preview." class="fa fa-exclamation pull-right"></i>' : '' %><%= l.title %> </a>
                            <% if (l.title === meta.title && l.subNav && l.subNav.length) { %>
                                <ul class="nav">
                                    <%l.subNav.forEach(function(s) { %>
                                        <li><a title="<%= s %>" href="#<%= s.toLowerCase().replace(/[^\w]+/g, '-') %>"><%= s %></a></li>
                                    <%});%>
                                </ul>
                            <%}%>
                        </li>
                    <%}%>
                <% });%>
            <% });%>
        </ul>
        <div class="pl-content <%= meta.sidebar == false ? 'container' : '' %>">
            <% if (meta.preview) { %>
                <div class="pl-preview-header">This document is a preview.</div>
            <% } %>
            <%- content %>
            <% if (locals.subCategory) { %>
                <hr>
                <div class="pl-footer">
                    <% if (locals.prev) { %>
                        <a class="pl-footer-previous btn btn-link" style="text-align: left;" href="<%= prev.url %>">
                            <div class="text-muted" style="font-size: 11px;">PREVIOUS</div>
                            <%= prev.title %>
                        </a>
                    <% } %>
                    <% if (locals.next) { %>
                        <a class="pl-footer-next pull-right btn btn-link" style="text-align: right;" href="<%= next.url %>">
                            <div class="text-muted" style="font-size: 11px;">NEXT</div>
                            <%= next.title %>
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
<% include footer %>
